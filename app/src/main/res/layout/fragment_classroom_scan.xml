<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">


        <!-- Inner Layout Content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F9F9F9"
            android:padding="8dp"
            >

            <!-- Header -->
            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Class-Room Attendance"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="#50C9C3"
                android:textColor="#000000"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Sync Status Row -->
            <LinearLayout
                android:id="@+id/layoutSyncStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingHorizontal="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvSyncStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ‘‰  Tap to send attendance."
                    android:textColor="#008000 "
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Resume Info Section -->
            <LinearLayout
                android:id="@+id/layoutResumeInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#E8F0FF"
                android:padding="12dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/layoutSyncStatus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvResumeClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resumed Class: -"
                    android:textStyle="bold"
                    android:textColor="#2E7DFF"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvResumeTeacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher: -"
                    android:textSize="14sp"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/tvResumeStudents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present Students: 0"
                    android:textSize="14sp"
                    android:textColor="#333333"/>
            </LinearLayout>


            <!-- Date, Time, Version Row -->
            <TextView
                android:id="@+id/tvStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Start Attendance To Scan Room Card"
                android:textColor="#141313"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/layoutDateTimeVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v1.51"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
